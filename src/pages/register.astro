---
import Layout from "../layouts/Layout.astro";
import {RegisterForm} from "../components/FormRegisterReact";
import RegisterModal from '../components/modals/RegisterModal.astro'

export const prerender = false;
const user = Astro.locals.user;
if(user?.id != undefined){
  return Astro.redirect('/home')
}
---

<Layout title="Login">
  <main class="flex flex-col items-center py-16">
    <h1 class="text-3xl text-blue-500 font-bold">Registrarse</h1>
    <RegisterForm client:only>
      <RegisterModal slot="modal"/>
    </RegisterForm>
  </main>
</Layout>
